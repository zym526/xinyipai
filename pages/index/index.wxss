.beatsBottom{
  display: flex;
  justify-content: space-between;
}
.bottomOnly{
  text-align: center;
  width: 210rpx;
}
.commodity{
  width: 100%;
  height: 210rpx;
  margin: 12rpx 0rpx;
  border-radius: 6rpx;
  background-color: #F5F5F5;
  text-align: center;
  position: relative;
}
.commodity image{
  width: 100%;
  height: auto;
}
.logo{
  width: 100rpx!important;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translateX(-50%) translateY(-50%);
}
.time{
  font-size: 20rpx;
  line-height: 40rpx;
  position: absolute;
  left: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
  background-color: #333333;
  color: white;
  border-radius: 0rpx 0rpx 6rpx 6rpx;
}
.money{
  font-size: 20rpx;
}
.money text{
  font-size: 24rpx;
}
.jifen{
  color: #DBA759;
}
.yuan{
  color: #E7260A;
}
/* 品牌秒拍 */
.beatsOne{
  margin-top: 22rpx;
}
.threeClass{
  display: flex;
  padding: 12px;
}
.strong{
  font-size: 50rpx;
  width: 240rpx;
  color: #333333;
  line-height: 62rpx;
}
.small{
  font-size: 42rpx;
  width: 240rpx;
  color: #999999;
  line-height: 62rpx;
}
/* 具体拍品 */
.paipinOuter{
  width: 100%;
  padding: 24rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
}
.paipin{
  width: calc(50% - 13rpx);
  background-color: white;
  border-radius: 10rpx;
  margin-bottom: 24rpx;
}
.paipin:nth-child(2n-1){
  margin-right: 24rpx;
}
.paipinImg{
  width: 100%;
  /* height: 304rpx; */
  text-align: center;
}
.paipinImg image{
  width: 100%;
  height: auto;
}
.paipinTitle{
  font-size: 28rpx;
  letter-spacing: 0;
  overflow: hidden;
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;  /*要显示的行数*/
  -webkit-box-orient: vertical;
  padding: 0rpx 12rpx;
}
.paipinTitle2{
  font-size: 24rpx;
  padding: 12rpx;
}
.paipinTitle2 text{
  font-size: 32rpx;
}
.paipinLogo{
  width: 40%!important;
  margin: 30% 0rpx;
}
/* 回到顶部 */
.go_top{
  background-color: white;
  border-radius: 50%;
  box-shadow: 0rpx 0rpx 20rpx rgba(0,0,0,1);
  position: fixed;
  right: 0rpx;
  bottom: 150rpx;
  width: 90rpx;
  height: 90rpx;
  opacity: 0.5;
}
.red-bg{
  background-color: rgba(235, 97, 0, 0.15);
}