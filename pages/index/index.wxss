/**index.wxss**/
page {
  background: #F5F5F5;
}
.inputCla{
  font-size: 28rpx;
  line-height: 60rpx;
  height: 60rpx!important;
}
.van-search{
  padding: 24rpx!important;
}
.van-search__content{
  padding-left: 0rpx!important;
  border-radius: 60rpx!important;
}
.customCla .field-index--van-field{
  background-color: white!important;
  border-radius: 60rpx;
}
.customCla .van-cell__left-icon-wrap{
  font-size: 36rpx!important;
  height: 60rpx!important;
  margin-left: 15rpx!important;
}
.customCla .van-field__clear-root{
  font-size: 36rpx!important;
  height: 60rpx!important;
}
/* 轮播图 */
.lunbo{
  width: calc(100% - 48rpx);
  border-radius: 30rpx;
  margin-left: 24rpx;
  background-color: white;
  text-align: center;
}
.lunbo image{
  width: 100%;
  border-radius: 30rpx;
}
.lunboImageLogo{
  width: 150rpx!important;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translateX(-50%) translateY(-50%);
}
/* 分类专区 */
.classify{
  width: 100%;
  padding: 24rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}
.onlyClass{
  text-align: center;
  /* width: 104rpx; */
}
.classifyTitle{
  font-size: 24rpx;
} 
.onlyClass image{
  width: 59rpx;
  height: auto;
}
/* 排行和新品 */
.allTwo{
  width: 100%;
  padding: 24rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}
.rankingList,.newProduct{
  padding: 28rpx 90rpx;
  border-radius: 16rpx;
  color: white;
  font-size: 32rpx;
}
.rankingList{
  background:-moz-linear-gradient(left,#F5AF19 25%,#F12711);
  background:-webkit-linear-gradient(left,#F5AF19 25%,#F12711);
  background:-o-linear-gradient(left,#F5AF19 25%,#F12711);
  background:-ms-linear-gradient(left,#F5AF19 25%,#F12711);
  background:linear-gradient(left,#F5AF19 25%,#F12711);
}
.newProduct{
  background:-moz-linear-gradient(left,#9AF0BF 25%,#20BDFF);
  background:-webkit-linear-gradient(left,#9AF0BF 25%,#20BDFF);
  background:-o-linear-gradient(left,#9AF0BF 25%,#20BDFF);
  background:-ms-linear-gradient(left,#9AF0BF 25%,#20BDFF);
  background:linear-gradient(left,#9AF0BF 25%,#20BDFF);
}
/* 芯意快报 */
.message{
  padding: 24rpx;
  box-sizing: border-box;
  font-size: 24rpx;
}
.messageInside text{
  color: #E7260A;
}
.messageInside{
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
/* 极限秒拍 */
.secondBeats{
  width: 100%;
  border-radius: 20rpx;
  background-color: white;
  padding: 24rpx;
  box-sizing: border-box;
}
.beatsTop{
  display: flex;
  justify-content: space-between;
}
.beatsTop text:first-child{
  font-size: 36rpx;
}
