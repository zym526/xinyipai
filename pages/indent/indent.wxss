page{
  background-color: #F0F2F5;
}
/* 顶部导航 */
.top-tab{
  background-color: white;
  padding: 15rpx 0rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.one-tab-outer{
  display: flex;
  justify-content: center;
}
.one-tab{
  width: 95rpx;
  padding: 10rpx 0rpx;
  font-size: 30rpx;
  text-align: center;
  color: #333333;
}
.active-tab{
  border-bottom: 4rpx solid #E7260A;
  color: #E7260A;
}
/* 订单 */
.order{
  padding: 25rpx;
  box-sizing: border-box;
  background-color: white;
  margin-bottom: 20rpx;
}
.order-top{
  display: flex;
  justify-content: space-between;
}
.order-top-left{
  display: flex;
  align-items: baseline;
  font-size: 30rpx;
  color: #333333;
  font-weight: bold;
}
.order-top-left .icon-dianpu{
  margin-right: 13rpx;
}
.order-shop-name{
  margin-right: 10rpx;
}
.order-top-right{
  font-size: 22rpx;
  color: #E7260A;
}
/* 中间商品信息 */
.order-center{
  display: flex;
  margin: 15rpx 0rpx;
}
.order-center-left{
  width: 150rpx;
  height: auto;
  margin-right: 16rpx;
  font-size: 0rpx;
}
.order-center-left image{
  width: 100%;
  height: auto;
}
.order-center-right{
  width: calc(100% - 166rpx);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.order-center-text1{
  font-size: 28rpx;
  color: #333333;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.order-center-text2{
  font-size: 22rpx;
  color: #333333;
}
.order-center-text2 text{
  font-size: 26rpx;
}
/* 底部信息 */
.order-bottom{
  display: flex;
  justify-content: space-between;
}
.order-bottom-left{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #E7260A;
}
.order-bottom-left-yuan{
  width: 6rpx;
  height: 6rpx;
  border-radius: 6rpx;
  margin-right: 8rpx;
  background-color: #E7260A;
}
.order-bottom-right{
  display: flex;
}
.order-bottom-cancel,.order-bottom-pay,.order-bottom-look,.order-bottom-confirm,.order-bottom-shop,.order-bottom-del{
  padding: 12rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  line-height: 26rpx;
  color: #333333;
  border-radius: 10rpx;
  border: 1rpx solid #333333;
}
.order-bottom-pay,.order-bottom-confirm{
  border: none;
  background-color: #E7260A;
  color: white;
  margin-left: 10rpx;
}
/* 直购和拍卖的颜色更改 */
.direct-purchasing{
  color: #EB6100;
}
.direct-purchasing-bg{
  background-color: #EB6100;
}