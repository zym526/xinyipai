/* 开通vip */
.vip{
  background-color: #333333;
  position: absolute;
  width: calc(100% - 108rpx);
  margin-left: 54rpx;
  border-radius: 20rpx;
  display: flex;
  top: 240rpx;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 32rpx 50rpx;
  box-sizing: border-box;
}
.vipLeft{
  color: #DFC191;
  font-size: 28rpx;
  line-height: 48rpx;
  display: flex;
}
.vipLeft image{
  width: 116rpx;
  height: auto;
  margin-right: 10rpx;
}
.vipRight{
  background-color: #DFC191;
  color: #333;
  display: inline-block;
  border-radius: 40rpx;
  /* padding: 6rpx 12rpx; */
  font-size: 20rpx;
  line-height: 40rpx;
  height: 40rpx;
  width: 84rpx;
  text-align: center;
}
/* 订单 */
.indent{
  position: absolute;
  top: 330rpx;
  width: 100%;
  background-color: white;
  border-radius: 20rpx 20rpx 0rpx 0rpx;
}
.weui-flex{
  display: flex;
  flex-wrap: wrap;
}
.weui-flex__item{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #333333;
}
.item-image-outer{
  width: 48rpx;
  height: 48rpx;
  border-radius: 10rpx;
  text-align: center;
  position: relative;
}
.right-top-text{
  position: absolute;
  right: -11rpx;
  top: -11rpx;
  color: #FF0000;
  width: 22rpx;
  height: 22rpx;
  background-color: white;
  border: 2rpx solid #FF0000;
  border-radius: 22rpx;
  font-size: 18rpx;
  line-height: 22rpx;
  text-align: center;
}
.item-image-outer .iconfont{
  font-size: 30rpx;
  color: white;
  line-height: 48rpx;
}
.item-image-outer image{
  width: 48rpx;
  height: auto;
}
