.topBg{
  width: 100%;
  height: auto;
  position: absolute;
  top: 0px;
}
page{
  height: 100%;
  border: 2rpx solid rgba(0,0,0,0);
  box-sizing: border-box;
}
/* 开通vip */
.vip{
  background-color: #333333;
  position: absolute;
  width: calc(100% - 224rpx);
  margin-left: 84rpx;
  border-radius: 20rpx;
  display: flex;
  top: 240rpx;
  justify-content: space-between;
  padding: 20rpx 32rpx 50rpx;
}
.vipLeft{
  color: #DFC191;
  font-size: 28rpx;
  line-height: 48rpx;
  display: flex;
}
.vipLeft image{
  width: 116rpx;
  height: auto;
  margin-right: 10rpx;
}
.vipRight{
  background-color: #DFC191;
  color: #333;
  display: inline-block;
  border-radius: 40rpx;
  padding: 6rpx 12rpx;
  font-size: 20rpx;
  line-height: 40rpx;
  height: 40rpx;
}
/* 订单 */
.indent{
  position: absolute;
  top: 330rpx;
  width: 100%;
  background-color: white;
  border-radius: 20rpx 20rpx 0rpx 0rpx;
}
.weui-flex__item image{
  width: 48rpx;
  height: auto;
}
.weui-flex__item{
  text-align: center;
  font-size: 24rpx;
  color: #333;
}
/* 图片 */
.bottomImg{
  width: calc(100% - 48rpx);
  margin-left: 24rpx;
  height: 200rpx;
  background:-moz-linear-gradient(left,#F12711 25%,#F5AF19);
  background:-webkit-linear-gradient(left,#F12711 25%,#F5AF19);
  background:-o-linear-gradient(left,#F12711 25%,#F5AF19);
  background:-ms-linear-gradient(left,#F12711 25%,#F5AF19);
  background:linear-gradient(left,#F12711 25%,#F5AF19);
  opacity: 0.5;
  border-radius: 16rpx 16rpx 0rpx 0rpx;
  color: white;
  text-align: center;
  font-size: 48rpx;
  line-height: 60rpx;
  font-weight: 100;
  padding: 40rpx;
  box-sizing: border-box;
}