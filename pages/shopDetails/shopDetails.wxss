page{
  background-color: #ececec;
}
.shangpu{
  margin: 24rpx;
  border-radius: 10rpx;
  box-shadow: 0rpx 0rpx 10rpx rgba(0,0,0,0.3);
  display: flex;
  justify-content: space-between;
}
.attention{
  display: flex;
  align-items: center;
  padding-right: 20rpx;
}
.attention button{
  width: 129rpx!important;
  height: 54rpx;
  background: #E7260A;
  font-size: 24rpx;
  line-height: 54rpx;
  color: white;
  padding: 0rpx!important;
  border-radius: 54rpx;
}
.attention button image{
  width: 23rpx;
  height: auto;
  margin-right: 9rpx;
}
/* 好评率 */
.reputation{
  width: calc(100% - 48rpx);
  margin-left: 24rpx;
}
.weui-cell{
  padding: 24rpx;
}
.weui-cell:before{
  border: none;
}
.repOne{
  padding: 12rpx 24rpx;
}
.repOneLfet{
  display: inline-block;
  width: 170rpx;
}
.repOne:first-child{
  padding-top: 0rpx;
}
.repOne text{
  font-size: 30rpx;
  display: inline-block;
  margin-right: 50rpx;
}
.repOneRed{
  color: #E7260A;
}
.repOneOrang{
  color: #F5AF19;
}
.bottomRep{
  padding-bottom: 12rpx;
}
/* 基本信息 */
.information{
  width: calc(100% - 48rpx);
  margin: 24rpx;
  margin-bottom: 24rpx;
}
.information .weui-cell__bd{
  font-size: 28rpx;
  color: #333333;
}
.information .weui-cell__ft{
  font-size: 24rpx;
  color: #333333;
}
.information .weui-cell__ft image{
  width: 28rpx;
  height: auto;
}
.information .weui-cell{
  padding: 16rpx 24rpx;
}
.information .weui-cells{
  border-radius:10rpx 10rpx 10rpx 10rpx;
  margin-top:0rpx;
  padding-bottom: 12rpx;
}